        mc:Ignorable="d"
        Activated="Activated_Window"
        Title="일기 목록" Height="445" Width="772">
    <Grid>

        <Button Content="글 쓰기" HorizontalAlignment="Left" Height="49" Margin="562,319,0,0" VerticalAlignment="Top" Width="163" Click="Button_Click"/>
